//- image, avatar, imageUrl, abstract, animals, business, cats, city, food, nightlife, fashion, people, nature, sports, technics, transport
mixin image()
  - var args = Array.prototype.slice.call(arguments);
  - var categories = ['abstract', 'animals', 'business', 'cats', 'city', 'food', 'nightlife', 'fashion', 'people', 'nature', 'sports', 'technics', 'transport'];
  if lodash.isObject(args[0])
    - var width = args[0].width || args[0].w
    - var height = args[0].height || args[0].h
    - var category = args[0].category || args[0].c
  else
    - var width = args[0]
    - var height = args[1]
    - var category = args[2]
  unless lodash.includes(categories, category) || category === 'avatar'
    - category = lodash.sample(categories);
  img(
    src="#{image[category](width, height)}",
    alt="Random image of some #{category}",
  )&attributes(attributes)
