//- image, avatar, imageUrl, abstract, animals, business, cats, city, food, nightlife, fashion, people, nature, sports, technics, transport
mixin image()
  - var args = Array.prototype.slice.call(arguments);
  - var categories = ['abstract', 'animals', 'business', 'cats', 'city', 'food', 'nightlife', 'fashion', 'people', 'nature', 'sports', 'technics', 'transport'];
  if global._.isObject(args[0])
    - var width = args[0].width
    - var height = args[0].height
    - var category = args[0].category
  else
    - var width = args[0]
    - var height = args[1]
    - var category = args[2]
  unless global.includes(categories, category)
    - category = global.sample(categories);
  img(
    src="#{global.image[category](width, height)}",
    alt="Random image of #{category}",
  )&attributes(attributes)
